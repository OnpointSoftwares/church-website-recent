# .htaccess for clean URLs (hide .html and /templates/ in URLs)
# Place this file in your web root directory

RewriteEngine On
RewriteBase /

# Serve files and directories if they exist
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Rewrite clean URLs to templates directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-zA-Z0-9/_-]+)$ templates/$1.html [L]

# Redirect /templates/xxx.html to /xxx
RewriteCond %{THE_REQUEST} /templates/([^.]+)\.html [NC]
RewriteRule ^ templates/%1 [R=301,L]


